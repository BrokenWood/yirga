{
  "extends": "@yirga/prelints/lib/tsconfig.default.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "(\\.module|)\\.(le|sa|sc)ss$"
        }
      }
    ],
    "resolveJsonModule": true,
    "module": "es6",
    "outDir": "./lib",
    "rootDir": ".",
    "checkJs": false
  }
}
